{
  "name": "react-webpack-template",
  "version": "1.0.0",
  "main": "app",
  "private": true,
  "license": "UNLICENSED",
  "description": "React template with Webpack and Babel",
  "scripts": {
    "prepare": "husky install",
    "dev": "webpack serve --hot --config webpack/webpack.dev.js",
    "start:production": "webpack serve --hot --config webpack/webpack.prod.js",
    "test": "jest",
    "format": "prettier --write \"**/*.{js,json}\"",
    "lint": "eslint \"**/*.js\" --fix",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint",
    "build:clean": "rimraf ./build",
    "build:mount": "npm run build:clean && mv tempDist build",
    "build": "webpack --color --progress --config webpack/webpack.prod.js",
    "postbuild": "npm run build:mount"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "i18next": "^23.1.0",
    "i18next-browser-languagedetector": "^7.0.2",
    "js-cookie": "^3.0.5",
    "moment": "^2.29.4",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^13.0.0",
    "react-redux": "^8.1.0",
    "react-router-dom": "^6.13.0",
    "react-toastify": "^9.1.3",
    "redux-saga": "^1.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-export-default-from": "^7.22.5",
    "@babel/plugin-transform-class-properties": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "babel-loader": "^9.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "buffer": "^6.0.3",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-webpack-plugin": "^4.0.1",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.2.4",
    "postcss-preset-env": "^8.3.2",
    "prettier": "^2.8.8",
    "process": "^0.11.10",
    "sass": "^1.63.4",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.1",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --cache --fix"
    ],
    "**/*.{js,json}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
